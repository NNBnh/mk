# Start
[ -z "$*" ] && {
	printf '%s\n' 'mk: missing operand' >&2
	exit 1
}

for item in "$@"; do
	case "$item" in
		*'/')
			mkdir -p "$item"
		;;
		*)
			mkdir -p "$(dirname "$item")" || continue

			if [ ! -e "$item" ]; then
				 :>> "$item"
			elif [ -d "$item" ]; then
				printf '%s\n' "mk: cannot create file '$item': Directory exists" >&2
			fi
		;;
	esac
done


exit 0
