# Values
IFS='
'


# Start
[ -z "$@" ] && {
	printf '%s' 'mk: missing operand' >&2
	exit 1
}

for item in "$@"; do
	for path in $(printf '%s' "$item" | tr '/' '\n'); do
		paths="${paths:+$paths/}$path"

		if [ -e "$paths" ] && [ ! -d "$paths" ]; then
			printf '%s' "mk: cannot create '$item': '$paths' exists" >&2
			exit 1
		fi
	done

	paths=''
done

for item in "$@"; do
	case "$item" in
		*'/')
			mkdir -p "$item"
		;;
		*)
			mkdir -p "$(dirname $item)"
			:>> "$item"
		;;
	esac
done


exit 0
